FROM quay.io/eris/base:alpine
MAINTAINER Monax <support@monax.io>

ENV NAME eris-pm

# Get the binary from the artifact in pwd
COPY ./$NAME $INSTALL_BASE/$NAME
RUN chmod +x $INSTALL_BASE/$NAME

# Finalize
ENV ERISDIR /home/$USER/.eris
RUN chown --recursive $USER:$USER /home/$USER
VOLUME $ERISDIR
WORKDIR $ERISDIR
USER $USER
ENTRYPOINT eris-pm
